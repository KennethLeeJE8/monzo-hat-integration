{
  "name": "monzo-data-connector",
  "version": "1.0.0",
  "private": true,
  "description": "Data connector for integrating Monzo banking data with Dataswyft wallets via CheckD platform",
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^27.5.1",
    "supertest": "^7.1.4"
  },
  "scripts": {
    "start": "node server.js",
    "server": "node server.js",
    "test": "jest src/ --verbose",
    "test:webhook": "jest src/gateway/__tests__/ --verbose",
    "test:wallet-unit": "jest src/storage/__tests__/ --verbose",
    "test:unit": "jest src/gateway/__tests__/ src/storage/__tests__/ --verbose",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:wallet": "node test-wallet-direct.js",
    "test:wallet-monzo": "node test-wallet-monzo.js",
    "test:oauth-demo": "node test-oauth-flow-demo.js",
    "test:oauth-part1": "jest --config=jest.integration.config.js --testNamePattern=\"PART 1.*Webhook.*OAuth Authentication\" --verbose",
    "test:oauth-part2": "jest --config=jest.integration.config.js --testNamePattern=\"PART 2.*Monzo Data.*Wallet Storage\" --verbose",
    "test:oauth-both": "npm run test:oauth-part1 && echo \"\\nðŸ”„ PART 1 completed! Please approve access in your Monzo mobile app, then press any key to continue to PART 2...\" && read -n 1 && npm run test:oauth-part2"
  },
  "main": "server.js",
  "keywords": ["data-connector", "monzo", "banking", "dataswyft", "checkd"],
  "engines": {
    "node": ">=18.0.0"
  }
}
